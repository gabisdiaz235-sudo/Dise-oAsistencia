<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SistemaGestionAsistencia.Vistas.WindowInicioSesion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SistemaGestionAsistencia.Vistas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:viewmodels="using:SistemaGestionAsistencia.VistaModelo">
    

    <Border x:ConnectionId='2' x:Name="Border" CornerRadius="20">
        <Border.Background>
            <ImageBrush  Stretch="Fill"/>
        </Border.Background>
        <Border.DataContext>
            <viewmodels:InicioSesionViewModel />
        </Border.DataContext>
        <Border CornerRadius="20" 
            BorderThickness="5"
            Margin="20"
            Opacity="0.90">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4FB1A1" Offset="0"/>
                    <GradientStop Color="#FC8500" Offset="0.75"/>
                    <GradientStop Color="#4FB1A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>


            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#143446" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <ScrollViewer>


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="7"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Log In"
                               Foreground="DarkGray"
                               FontSize="10"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                        <TextBlock x:ConnectionId='6' x:Name="MensajeTextBlock" Text="{Binding Mensaje}" Foreground="Red" 
                                   HorizontalAlignment="Center"/>

                    </Grid>
                    <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0">
                        <Image 
                           Width="175"
                           Height="175"/>

                        <TextBlock Text="NOMBRE SISTEMA"
                               Foreground="White"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>

                        <TextBlock Text="Frase que inspire hehehe"
                               Foreground="LightGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>

                        <TextBlock Text="Usuario"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,20,0,0"/>
                        <TextBox x:ConnectionId='3' x:Name="TextUser"
                             Text="{Binding Dato.CorreoAdmin, Mode=TwoWay}"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="White"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="30,10,0,0">
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Assets/LOG-USER.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>




                        <TextBlock Text="Contraseña"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,10,0,0"/>
                        <PasswordBox x:ConnectionId='4' x:Name="txtBlockpassword"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="White"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,3"
                             Height="30"
                             Password="{Binding Dato.ContraseñaHashAdmin,Mode=TwoWay}"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="30,6,0,0">
                            <PasswordBox.Background>
                                <ImageBrush ImageSource="/Assets/CONTRA-USER.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
                            </PasswordBox.Background>
                        </PasswordBox>


                        <Button x:ConnectionId='5' x:Name="BtnLogin"
                            Background="#F6BD3D"
                            BorderThickness="0"
                            Content="Iniciar Sesión"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Grid.Column="1"
                            CornerRadius="20"
                            Margin="0,50,0,45"
                            Width="150"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding IniciSesionCommand}"/>
                            


                    </StackPanel>

                </Grid>

            </ScrollViewer>

        </Border>
    </Border>
    
</Window>

